<configuration debug="true">
	<appender name="STDOUT"
    class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>
        %d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n
     </pattern>
    </encoder>
  </appender>

  <root level="INFO">
    <appender-ref ref="STDOUT" />
  </root>
  
  <logger name="snoozle" level="DEBUG"/>
  <logger name="nl.utwente" level="INFO"/>
  <logger name="asap.realizer" level="INFO"/>
  <logger name="nl.utwente.hmi.usb" level="DEBUG"/>
  <logger name="nl.utwente.hmi.middleware.loader" level="DEBUG"/>
  
</configuration>
